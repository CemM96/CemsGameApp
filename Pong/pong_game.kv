<PongPaddle>:
    size: 25, 150
    canvas.before:
        Color:
            rgba: 0.6, 0.7, 0.3, 1
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<PongBall>
    size: 50, 50
    canvas.before:
        Color:
            rgba: 0.8, 0.2, 0.2, 1
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PongGame>
    ball: pong_ball
    player_1: player_left
    player_2: player_right

    canvas.before:
        Color:
            rgba: 1, 1, 1, 0.5
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height

    MDLabel:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player_2_score)

    MDLabel:
        font_size: 70
        center_x: root.width * 3/4
        top: root.top - 50
        text: str(root.player_1_score)

    PongBall:
        id: pong_ball
        center: self.parent.center

    PongPaddle:
        id: player_left
        x: root.x + 50
        center_y: root.center_y

    PongPaddle:
        id: player_right
        x: root.width - self.width - 50
        center_y: root.center_y

    MDRaisedButton:
        id: serve_button
        text: 'SERVE'
        padding: 75, 50
        font_size: 25
        size: 150, 50
        center_x: root.width / 2
        center_y: root.height / 2 - 200
        on_release:
            root.serve_ball()
            root.serve_button_pressed()

    # Exit Menu...
