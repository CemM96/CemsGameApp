<MenuScreen>
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Main Menu"
            icon: "exit-to-app"
            left_action_items: [["exit-to-app", lambda x: app.stop()]]
            right_action_items: [["cog", lambda x: app.root.current_screen.switch_to_settings()]]
            elevation: 5

        MDBoxLayout:
            orientation: 'horizontal'
            padding: 50
            spacing: 10

            MDCard:
                MDRaisedButton:
                    text: 'Start Game'
                    icon: "play"
                    font_style: "Button"
                    size_hint: (0.25, 0.2)
                    pos_hint: {'center_x': 0.5}
                    on_release: app.root.current = 'pong game'

            MDCard:
                MDRaisedButton:
                    text: 'Start Game'
                    icon: "play"
                    font_style: "Button"
                    size_hint: (0.25, 0.2)
                    pos_hint: {'center_x': 0.5}
                    # on_release: app.root.current = 'blackjack game'

            MDCard:
                MDRaisedButton:
                    text: 'Start Game'
                    icon: "play"
                    font_style: "Button"
                    size_hint: (0.25, 0.2)
                    pos_hint: {'center_x': 0.5}
                    # on_release: app.root.current = 'snake game'

            MDCard:
                MDRaisedButton:
                    text: 'Start Game'
                    icon: "play"
                    font_style: "Button"
                    size_hint: (0.25, 0.2)
                    pos_hint: {'center_x': 0.5}
                    # on_release: app.root.current = '... game'

            MDCard:
                MDRaisedButton:
                    text: 'Start Game'
                    icon: "play"
                    font_style: "Button"
                    size_hint: (0.25, 0.2)
                    pos_hint: {'center_x': 0.5}
                    # on_release: app.root.current = '... game'

        MDBoxLayout:
            orientation: 'vertical'
            padding: 100
            spacing: 0

            MDLabel:
                id: 'login_label'
                text: 'Welcome to the Arcade!'
                font_style: "H2"
                halign: 'center'

            MDFillRoundFlatIconButton:
                text: 'Sign In'
                icon: "login"
                font_style: "Button"
                pos_hint: {'center_x': 0.5}
