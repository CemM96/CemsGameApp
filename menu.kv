<MenuScreen>
    MDBoxLayout:
        orientation: 'vertical'
        spacing: 20
        padding: 50

        MDLabel:
            text: "Welcome to Cem's Game App"
            font_size: 32
            halign: 'center'

        MDFillRoundFlatIconButton:
            text: 'Start Game'
            icon: "play"
            font_style: "Button"
            size_hint: (0.25, 0.2)
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = 'pong game'

        MDFillRoundFlatIconButton:
            text: 'Settings'
            icon: "cog"
            font_style: "Button"
            size_hint: (0.25, 0.2)
            pos_hint: {'center_x': 0.5}
            on_release: app.root.current = 'settings'

        MDFloatingActionButton:
            icon: "exit-to-app"
            #md_bg_color: (1, 0, 0, 1)
            #size_hint: (0.25, 0.2)
            #pos_hint: {'center_x': 0.5}
            on_release: app.stop()
