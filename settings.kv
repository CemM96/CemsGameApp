<SettingsScreen>

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Settings"
            icon: "exit-to-app"
            anchor_title: "left"
            left_action_items: [["arrow-left", lambda x: app.root.current_screen.back_to_menu()]]
            #right_action_items: [["cog"]]
            elevation: 5

        MDGridLayout:
            cols: 2
            MDLabel:
                text: "Settings 1"
                halign: "center"

            MDLabel:
                text: "Settings 2"
                halign: "center"
