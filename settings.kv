<SettingsScreen>
    canvas.before:
        Rectangle:
            source: 'GameAppImages/backgroundGrey.jpg'
            size: self.size
            pos: self.pos

    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Settings"
            icon: "exit-to-app"
            anchor_title: "left"
            left_action_items: [["arrow-left", lambda x: app.root.current_screen.back_to_menu()]]
            elevation: 5

        MDBoxLayout:
            MDCard:
                orientation: "vertical"
                padding: 50
                spacing: 10
                elevation: 5
                size_hint: None, None
                size: 480, 580
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
