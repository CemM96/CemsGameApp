<SettingsScreen>
    MDBoxLayout:
        orientation: "vertical"

        MDTopAppBar:
            title: "Settings"
            icon: "exit-to-app"
            anchor_title: "left"
            left_action_items: [["arrow-left", lambda x: app.root.current_screen.back_to_menu()]]
            elevation: 5

        MDGridLayout:
            cols: 2
            padding: "50dp"
            spacing: "50dp"

            MDLabel:
                text: "Settings 1"
                font_size: 32
                halign: "right"

            MDLabel:
                text: "Settings 2"
                font_size: 32
                halign: "left"
